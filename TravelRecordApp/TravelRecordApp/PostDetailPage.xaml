             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TravelRecordApp.PostDetailPage">

    <StackLayout Margin="20, 20, 20, 0">
        
        <Entry x:Name="EntryExperience"></Entry>
        
